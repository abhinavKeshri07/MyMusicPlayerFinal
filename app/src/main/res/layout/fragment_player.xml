<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#1f1f1f"
    android:layout_height="match_parent">
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_control_point_black_24dp"
        android:id="@+id/saveAsFavourite"
        android:layout_alignParentEnd="true"

        android:layout_margin="@dimen/fab_margin"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:text="Title"
        android:textColor="#fff"
        android:textSize="50dp"
        android:gravity="center"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="#fff"
        android:layout_below="@id/title"
        android:layout_marginTop="20dp"
        android:id="@+id/songImage"
        />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/palyPause"
        android:layout_marginBottom="40dp"
        android:progress="50"
        android:id="@+id/seekbar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        android:layout_alignParentEnd="false"
        android:textColor="#fff"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/palyPause"
        android:id="@+id/startTime"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/palyPause"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:textColor="#fff"
        android:layout_alignParentEnd="true"

        android:text="0:00"
        android:id="@+id/endTime"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/palyPause"
        android:background="@drawable/ic_play_circle_outline_black_24dp"
        />
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/palyPause"
        android:background="@drawable/ic_skip_next_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:id="@+id/skipNext"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toLeftOf="@id/palyPause"
        android:background="@drawable/ic_skip_previous_black_24dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:id="@+id/skipPrev"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toLeftOf="@id/skipPrev"
        android:background="@drawable/ic_shuffle_black_24dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:id="@+id/shuffle"/>
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toRightOf="@id/skipNext"
        android:background="@drawable/ic_repeat_black_24dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:id="@+id/repeat"/>



</RelativeLayout>